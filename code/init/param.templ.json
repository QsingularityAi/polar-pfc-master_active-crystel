{
  "shtns":
  {
    "nlat": 768,
    "nphi": 1536,
    "lmax": 750,
    "mmax": 750,
    "R": #{RADIUS},
    "threads": 1
  },

  "pfc":
  {
    "r":   #{r},
    "rho": -0.4,
    "C1":   0.2,
    "C4":   0.0,
    "v0":   #{V0},
    "Dr":   0.5,
    "initial": 0,
    "twist": 0.1,
    "cut": 2.5
  },

  "polar_pfc_shtns":
  {
    "use_old_solution": 1,
    "read_from_file": 0
  },

  "output":
  {
    "dir": "#{OUT_DIR}",
    "filename": "#{FILENAME}",
    "write_vtu": true,
    "dt":       10.0,
    "dt2":      100.0,
    "dt3":      1.0
  },

  "time":
  {
    "dt":   5.0e-3,
    "t0":   0.0,
    "tend": 5000.0,
    "n_iter": 1
  }

}
